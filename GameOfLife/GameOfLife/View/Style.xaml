<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ====== Общие цвета ======  -->
    <SolidColorBrush Color="#1E1E1E" x:Key="BgDark" />
    <SolidColorBrush Color="#2A2A2A" x:Key="BgPanel" />
    <SolidColorBrush Color="#3C8C40" x:Key="AccentGreen" />
    <SolidColorBrush Color="#2E77C3" x:Key="AccentBlue" />
    <SolidColorBrush Color="#C39B2E" x:Key="AccentGold" />
    <SolidColorBrush Color="#C32E2E" x:Key="AccentRed" />
    <SolidColorBrush Color="White" x:Key="TextWhite" />
    <SolidColorBrush Color="#404040" x:Key="BorderGray" />

    <!--  ====== TextBlock ======  -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="10,5,10,2" />
    </Style>

    <!--  ====== Button ======  -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="35" />
        <Setter Property="Margin" Value="10,5" />
        <Setter Property="Foreground" Value="{StaticResource TextWhite}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Background" Value="#3C3C3C" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderGray}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#4C4C4C" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#5A5A5A" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Индивидуальные цвета кнопок  -->
    <Style
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="Button"
        x:Key="BtnGreen">
        <Setter Property="Background" Value="{StaticResource AccentGreen}" />
    </Style>

    <Style
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="Button"
        x:Key="BtnBlue">
        <Setter Property="Background" Value="{StaticResource AccentBlue}" />
    </Style>

    <Style
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="Button"
        x:Key="BtnGold">
        <Setter Property="Background" Value="{StaticResource AccentGold}" />
    </Style>

    <Style
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="Button"
        x:Key="BtnRed">
        <Setter Property="Background" Value="{StaticResource AccentRed}" />
    </Style>

    <!--  ====== TextBox ======  -->
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="10,3" />
        <Setter Property="Padding" Value="6,3" />
        <Setter Property="Background" Value="#2E2E2E" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderGray}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CaretBrush" Value="White" />
    </Style>

    <!--  ====== Slider ======  -->
    <Style TargetType="Slider">
        <Setter Property="Margin" Value="10,10" />
    </Style>

    <!--  ====== CheckBox / ComboBox ======  -->
    <Style TargetType="CheckBox">
        <Setter Property="Margin" Value="10,3" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="10,3" />
        <Setter Property="Background" Value="#2E2E2E" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderGray}" />
    </Style>

</ResourceDictionary>
