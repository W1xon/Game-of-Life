<Window
    AllowsTransparency="True"
    Background="Transparent"
    Height="280"
    ResizeMode="NoResize"
    Title="Первый запуск"
    Width="500"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    x:Class="Cellverse.View.FFmpegDownloadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border BorderThickness="0">
        <Border
            Background="{StaticResource BgDark}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="44" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Title Bar  -->
                <Border
                    Background="{StaticResource BgPanel}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="12,12,0,0"
                    Grid.Row="0">
                    <Grid>
                        <!--  Иконка и заголовок  -->
                        <StackPanel
                            HorizontalAlignment="Center"
                            Margin="16,0,0,0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <Border
                                Background="{StaticResource AccentBlue}"
                                CornerRadius="6"
                                Height="24"
                                Margin="0,0,12,0"
                                Width="24">
                                <TextBlock
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Text="⬇️"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource TextPrimary}"
                                Text="Первый запуск"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Основной контент  -->
                <Grid Grid.Row="1" Margin="32,24,32,28">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Заголовок  -->
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextPrimary}"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Text="🎬 Загрузка FFmpeg" />

                    <!--  Описание  -->
                    <Border
                        Background="{StaticResource BgCard}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Grid.Row="2"
                        Padding="16,12">
                        <TextBlock
                            FontSize="13"
                            Foreground="{StaticResource TextSecondary}"
                            LineHeight="20"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            Загружаем FFmpeg для записи видео симуляции.<LineBreak />
                            <Run FontWeight="SemiBold" Foreground="{StaticResource AccentGreen}">Это происходит только один раз!</Run>
                        </TextBlock>
                    </Border>

                    <!--  Progress Bar  -->
                    <ProgressBar
                        Background="{StaticResource BgCard}"
                        BorderBrush="{StaticResource AccentBlue}"
                        BorderThickness="1"
                        Grid.Row="4"
                        Height="36"
                        IsIndeterminate="True" />
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>