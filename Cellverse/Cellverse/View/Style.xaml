<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!--  🎨 Enhanced Color Palette with Depth  -->
    <SolidColorBrush Color="#0D1117" x:Key="BgDark" />
    <SolidColorBrush Color="#161B22" x:Key="BgPanel" />
    <SolidColorBrush Color="#1C2128" x:Key="BgCard" />
    <SolidColorBrush Color="#21262D" x:Key="BgHover" />
    <SolidColorBrush Color="#2D333B" x:Key="BgPressed" />

    <!--  Vibrant Accent Colors  -->
    <SolidColorBrush Color="#00D9A5" x:Key="AccentPrimary" />
    <SolidColorBrush Color="#1AEDC0" x:Key="AccentHover" />
    <SolidColorBrush Color="#00B589" x:Key="AccentPressed" />

    <SolidColorBrush Color="#00D9A5" x:Key="AccentGreen" />
    <SolidColorBrush Color="#26F5C8" x:Key="AccentGreenHover" />

    <SolidColorBrush Color="#2F81F7" x:Key="AccentBlue" />
    <SolidColorBrush Color="#4B9AFF" x:Key="AccentBlueHover" />

    <SolidColorBrush Color="#F5BA2E" x:Key="AccentGold" />
    <SolidColorBrush Color="#FFC940" x:Key="AccentGoldHover" />

    <SolidColorBrush Color="#F85149" x:Key="AccentRed" />
    <SolidColorBrush Color="#FF6B63" x:Key="AccentRedHover" />

    <!--  Typography  -->
    <SolidColorBrush Color="#F0F6FC" x:Key="TextPrimary" />
    <SolidColorBrush Color="#9198A1" x:Key="TextSecondary" />
    <SolidColorBrush Color="#6E7681" x:Key="TextMuted" />

    <!--  Borders with Glow  -->
    <SolidColorBrush Color="#30363D" x:Key="BorderColor" />
    <SolidColorBrush Color="#484F58" x:Key="BorderHover" />

    <!--  📝  Typography Styles  -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontFamily" Value="Inter, Segoe UI, Arial" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
        <Setter Property="TextOptions.TextRenderingMode" Value="Auto" />
    </Style>

    <Style
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="TextBlock"
        x:Key="HeaderText">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,20" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="16"
                    Color="#00D9A5"
                    Opacity="0.15"
                    ShadowDepth="0" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="TextBlock"
        x:Key="SubHeaderText">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Margin" Value="0,0,0,14" />
        <Setter Property="Opacity" Value="0.95" />
    </Style>

    <Style
        BasedOn="{StaticResource {x:Type TextBlock}}"
        TargetType="TextBlock"
        x:Key="LabelText">
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="Opacity" Value="0.9" />
    </Style>

    <!--  🎴 Glassmorphic Card Style  -->
    <Style TargetType="Border" x:Key="ModernCard">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#1C2128" Offset="0" />
                    <GradientStop Color="#21262D" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#30363D" Offset="0" />
                    <GradientStop Color="#484F58" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="24"
                    Color="#000000"
                    Opacity="0.5"
                    ShadowDepth="4" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  🔘  Button Styles  -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="42" />
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="Padding" Value="24,0" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Background" Value="{StaticResource BgCard}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        x:Name="border">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            Margin="{TemplateBinding Padding}"
                            VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource BgHover}" />
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource BorderHover}" />
                            <Setter Property="Effect" TargetName="border">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="16"
                                        Color="#00D9A5"
                                        Opacity="0.2"
                                        ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource BgPressed}" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  💎 Primary Action Button with Glow  -->
    <Style
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="Button"
        x:Key="BtnPrimary">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#00E5B0" Offset="0" />
                    <GradientStop Color="#00C995" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="48" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="20"
                    Color="#00D9A5"
                    Opacity="0.4"
                    ShadowDepth="0" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        x:Name="border">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            Margin="{TemplateBinding Padding}"
                            VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                                        <GradientStop Color="#1AEDC0" Offset="0" />
                                        <GradientStop Color="#00D9A5" Offset="1" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Effect" TargetName="border">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="28"
                                        Color="#00D9A5"
                                        Opacity="0.6"
                                        ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource AccentPressed}" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.96" ScaleY="0.96" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  🟢 Vibrant Color Variants  -->
    <Style
        BasedOn="{StaticResource BtnPrimary}"
        TargetType="Button"
        x:Key="BtnGreen">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#26F5C8" Offset="0" />
                    <GradientStop Color="#00D9A5" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="20"
                    Color="#00D9A5"
                    Opacity="0.5"
                    ShadowDepth="0" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        BasedOn="{StaticResource BtnPrimary}"
        TargetType="Button"
        x:Key="BtnBlue">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#4B9AFF" Offset="0" />
                    <GradientStop Color="#2F81F7" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="20"
                    Color="#2F81F7"
                    Opacity="0.5"
                    ShadowDepth="0" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        BasedOn="{StaticResource BtnPrimary}"
        TargetType="Button"
        x:Key="BtnGold">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FFC940" Offset="0" />
                    <GradientStop Color="#F5BA2E" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="20"
                    Color="#F5BA2E"
                    Opacity="0.5"
                    ShadowDepth="0" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        BasedOn="{StaticResource BtnPrimary}"
        TargetType="Button"
        x:Key="BtnRed">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FF6B63" Offset="0" />
                    <GradientStop Color="#F85149" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="20"
                    Color="#F85149"
                    Opacity="0.5"
                    ShadowDepth="0" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ✨  TextBox - УПРОЩЁННЫЙ И РАБОЧИЙ  -->
    <Style TargetType="TextBox">
        <Setter Property="Height" Value="50" />
        <Setter Property="Margin" Value="0,0,0,14" />
        <Setter Property="Padding" Value="16,0" />
        <Setter Property="Background" Value="#161B22" />
        <Setter Property="Foreground" Value="#F0F6FC" />
        <Setter Property="BorderBrush" Value="#30363D" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CaretBrush" Value="#00D9A5" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="SelectionBrush" Value="#2F81F7" />
        <Setter Property="SelectionTextBrush" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        x:Name="border">
                        <ScrollViewer
                            Focusable="False"
                            Foreground="{TemplateBinding Foreground}"
                            HorizontalScrollBarVisibility="Hidden"
                            Margin="{TemplateBinding Padding}"
                            VerticalAlignment="Center"
                            VerticalScrollBarVisibility="Hidden"
                            x:Name="PART_ContentHost" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="#484F58" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="#2F81F7" />
                            <Setter Property="Effect" TargetName="border">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="20"
                                        Color="#2F81F7"
                                        Opacity="0.4"
                                        ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  📜 Sleek ScrollBar  -->
    <Style TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Track IsDirectionReversed="True" x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0" />
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Setter Property="Background" Value="{StaticResource TextMuted}" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Margin="3,0"
                                                            Width="10"
                                                            x:Name="ThumbBorder" />
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" TargetName="ThumbBorder" Value="{StaticResource TextSecondary}" />
                                                            </Trigger>
                                                            <Trigger Property="IsDragging" Value="True">
                                                                <Setter Property="Background" TargetName="ThumbBorder" Value="{StaticResource AccentPrimary}" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0" />
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
    </Style>

    <!--  🎯 Modern ComboBox  -->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="Background" Value="{StaticResource BgCard}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,0,0,14" />
        <Setter Property="MinHeight" Value="44" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton
                            ClickMode="Press"
                            Focusable="false"
                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                            x:Name="ToggleButton">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border
                                        Background="{Binding Background, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        CornerRadius="8"
                                        x:Name="border">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="35" />
                                            </Grid.ColumnDefinitions>
                                            <ContentPresenter
                                                Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                Margin="{Binding Padding, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                VerticalAlignment="Center" />
                                            <Path
                                                Data="M 0 0 L 5 5 L 10 0"
                                                Grid.Column="1"
                                                Height="5"
                                                HorizontalAlignment="Center"
                                                Stroke="{StaticResource TextSecondary}"
                                                StrokeThickness="2"
                                                VerticalAlignment="Center"
                                                Width="10" />
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource BorderHover}" />
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource AccentBlue}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <Popup
                            AllowsTransparency="True"
                            Focusable="False"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            Placement="Bottom"
                            PopupAnimation="Fade"
                            x:Name="PART_Popup">
                            <Border
                                Background="{StaticResource BgCard}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,4,0,0"
                                MaxHeight="300"
                                MinWidth="{TemplateBinding ActualWidth}">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="20"
                                        Color="#000000"
                                        Opacity="0.5"
                                        ShadowDepth="4" />
                                </Border.Effect>
                                <ScrollViewer
                                    HorizontalScrollBarVisibility="Disabled"
                                    Margin="6"
                                    VerticalScrollBarVisibility="Auto">
                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border
                        Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        Margin="2"
                        Padding="{TemplateBinding Padding}"
                        x:Name="Bd">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource BgHover}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource AccentBlue}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  🎚️ Gradient Slider  -->
    <Style TargetType="Slider">
        <Setter Property="Height" Value="32" />
        <Setter Property="Margin" Value="0,0,0,14" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Track
                            Focusable="False"
                            IsDirectionReversed="False"
                            VerticalAlignment="Center"
                            x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton
                                    Command="Slider.DecreaseLarge"
                                    Focusable="False"
                                    Height="5"
                                    IsHitTestVisible="False"
                                    Margin="0">
                                    <RepeatButton.Background>
                                        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                            <GradientStop Color="#00D9A5" Offset="0" />
                                            <GradientStop Color="#2F81F7" Offset="1" />
                                        </LinearGradientBrush>
                                    </RepeatButton.Background>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton
                                    Background="{StaticResource BorderColor}"
                                    Command="Slider.IncreaseLarge"
                                    Focusable="False"
                                    Height="5"
                                    IsHitTestVisible="False"
                                    Margin="0" />
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Height="18" Width="18">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border
                                                Background="{StaticResource AccentPrimary}"
                                                BorderBrush="Transparent"
                                                BorderThickness="3"
                                                CornerRadius="9"
                                                Height="18"
                                                Width="18"
                                                x:Name="thumbBorder">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="12"
                                                        Color="#00D9A5"
                                                        Opacity="0.6"
                                                        ShadowDepth="0" />
                                                </Border.Effect>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" TargetName="thumbBorder" Value="{StaticResource AccentHover}" />
                                                    <Setter Property="Effect" TargetName="thumbBorder">
                                                        <Setter.Value>
                                                            <DropShadowEffect
                                                                BlurRadius="16"
                                                                Color="#00D9A5"
                                                                Opacity="0.8"
                                                                ShadowDepth="0" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsDragging" Value="True">
                                                    <Setter Property="Background" TargetName="thumbBorder" Value="{StaticResource AccentPressed}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  💬 Glassmorphic ToolTip  -->
    <Style TargetType="ToolTip">
        <Setter Property="Background" Value="{StaticResource BgCard}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="16"
                    Color="#000000"
                    Opacity="0.5"
                    ShadowDepth="2" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6"
                        Padding="{TemplateBinding Padding}">
                        <TextBlock
                            Foreground="{TemplateBinding Foreground}"
                            Text="{TemplateBinding Content}"
                            TextWrapping="Wrap" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ✅ Modern CheckBox with Smooth Animation  -->
    <Style TargetType="CheckBox">
        <Setter Property="Margin" Value="0,0,0,14" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border
                            Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="2"
                            CornerRadius="5"
                            Height="22"
                            Margin="0,0,10,0"
