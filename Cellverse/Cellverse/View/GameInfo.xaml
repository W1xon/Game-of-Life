<Window
    AllowsTransparency="True"
    Background="Transparent"
    MaxHeight="600"
    ResizeMode="NoResize"
    SizeToContent="Height"
    Title="Game of Life — О программе"
    Width="800"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d"
    x:Class="Cellverse.View.GameInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border BorderThickness="0">
        <Border
            Background="{StaticResource BgDark}"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="1"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="44" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Title Bar  -->
                <Border
                    Background="{StaticResource BgPanel}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="12,12,0,0"
                    Grid.Row="0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Иконка и заголовок  -->
                        <StackPanel
                            Grid.Column="0"
                            Margin="16,0,0,0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                            <Border
                                Background="{StaticResource AccentBlue}"
                                CornerRadius="6"
                                Height="24"
                                Margin="0,0,12,0"
                                Width="24">
                                <TextBlock
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Text="📘"
                                    VerticalAlignment="Center" />
                            </Border>
                            <TextBlock
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource TextPrimary}"
                                Text="О программе"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <!--  Кнопка закрытия  -->
                        <Button
                            Click="Close_OnClick"
                            Grid.Column="1"
                            Height="44"
                            Style="{StaticResource TitleBarCloseButtonStyle}"
                            Width="46">
                            <Path
                                Data="M 0,0 L 10,10 M 10,0 L 0,10"
                                Stretch="None"
                                Stroke="White"
                                StrokeThickness="1.5" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Основной контент  -->
                <ScrollViewer
                    Grid.Row="1"
                    Padding="28,24,28,28"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Hero секция  -->
                        <Border
                            Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource AccentPrimary}"
                            BorderThickness="2"
                            CornerRadius="12"
                            Margin="0,0,0,24"
                            Padding="24">
                            <StackPanel>
                                <TextBlock
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource TextPrimary}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8"
                                    Text="Game of Life" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource TextSecondary}"
                                    HorizontalAlignment="Center"
                                    Opacity="0.9"
                                    Text="Симулятор клеточного автомата" />
                            </StackPanel>
                        </Border>

                        <!--  Описание игры  -->
                        <Border
                            Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Margin="0,0,0,20"
                            Padding="20">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,12" Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="20"
                                        Margin="0,0,8,0"
                                        Text="🎮" />
                                    <TextBlock
                                        Margin="0"
                                        Style="{StaticResource SubHeaderText}"
                                        Text="Что такое Игра Жизнь?" />
                                </StackPanel>
                                <TextBlock
                                    Foreground="{StaticResource TextSecondary}"
                                    LineHeight="22"
                                    TextWrapping="Wrap">
                                    «Игра Жизнь» — это клеточный автомат, изобретённый британским математиком<Run FontWeight="SemiBold" Foreground="{StaticResource AccentGreen}">Джоном Конвеем</Run>
                                    в 1970 году.
                                    Это не обычная игра, а математическая модель, демонстрирующая, как простые правила могут создавать сложное поведение.</TextBlock>
                                <TextBlock
                                    Foreground="{StaticResource TextSecondary}"
                                    LineHeight="22"
                                    Margin="0,10,0,0"
                                    TextWrapping="Wrap">
                                    Каждая клетка на поле может быть<Run Foreground="{StaticResource AccentGreen}">живой</Run>
                                    или<Run Foreground="{StaticResource AccentRed}">мёртвой</Run>
                                    . Состояние клетки в следующем поколении определяется
                                    количеством живых соседей. Из этих базовых правил возникают удивительные паттерны: планеры, осцилляторы, глайдеры и целые экосистемы!</TextBlock>
                            </StackPanel>
                        </Border>



                        <!--  Функционал  -->
                        <Border
                            Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Margin="0,0,0,20"
                            Padding="20">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,12" Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="20"
                                        Margin="0,0,8,0"
                                        Text="✨" />
                                    <TextBlock
                                        Margin="0"
                                        Style="{StaticResource SubHeaderText}"
                                        Text="Возможности программы" />
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Левая колонка  -->
                                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                            <Border
                                                Background="{StaticResource AccentGreen}"
                                                CornerRadius="4"
                                                Height="6"
                                                Margin="0,6,8,0"
                                                Width="6" />
                                            <TextBlock
                                                Foreground="{StaticResource TextSecondary}"
                                                Text="Рисование клеток кистями разных форм"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                            <Border
                                                Background="{StaticResource AccentBlue}"
                                                CornerRadius="4"
                                                Height="6"
                                                Margin="0,6,8,0"
                                                Width="6" />
                                            <TextBlock
                                                Foreground="{StaticResource TextSecondary}"
                                                Text="Гибкая настройка скорости симуляции"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                            <Border
                                                Background="{StaticResource AccentGold}"
                                                CornerRadius="4"
                                                Height="6"
                                                Margin="0,6,8,0"
                                                Width="6" />
                                            <TextBlock
                                                Foreground="{StaticResource TextSecondary}"
                                                Text="Множество цветовых схем"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                            <Border
                                                Background="{StaticResource AccentPrimary}"
                                                CornerRadius="4"
                                                Height="6"
                                                Margin="0,6,8,0"
                                                Width="6" />
                                            <TextBlock
                                                Foreground="{StaticResource TextSecondary}"
                                                Text="Панель производительности в реальном времени"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Правая колонка  -->
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                            <Border
                                                Background="{StaticResource AccentRed}"
                                                CornerRadius="4"
                                                Height="6"
                                                Margin="0,6,8,0"
                                                Width="6" />
                                            <TextBlock
                                                Foreground="{StaticResource TextSecondary}"
                                                Text="Импорт изображений с edge detection"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                            <Border
                                                Background="{StaticResource AccentGreen}"
                                                CornerRadius="4"
                                                Height="6"
                                                Margin="0,6,8,0"
                                                Width="6" />
                                            <TextBlock
                                                Foreground="{StaticResource TextSecondary}"
                                                Text="Запись видео симуляции"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                            <Border
                                                Background="{StaticResource AccentBlue}"
                                                CornerRadius="4"
                                                Height="6"
                                                Margin="0,6,8,0"
                                                Width="6" />
                                            <TextBlock
                                                Foreground="{StaticResource TextSecondary}"
                                                Text="Менеджер типов клеток с кастомными правилами"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!--  Контакты и поддержка  -->
                        <Border
                            Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource AccentPrimary}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Margin="0,0,0,20"
                            Padding="20">
                            <StackPanel>
                                <StackPanel Margin="0,0,0,12" Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="20"
                                        Margin="0,0,8,0"
                                        Text="💝" />
                                    <TextBlock
                                        Margin="0"
                                        Style="{StaticResource SubHeaderText}"
                                        Text="Поддержать проект" />
                                </StackPanel>
                                <TextBlock
                                    Foreground="{StaticResource TextSecondary}"
                                    LineHeight="22"
                                    Margin="0,0,0,16"
                                    TextWrapping="Wrap">
                                    Если вам нравится этот проект, вы можете поддержать его развитие или связаться со мной в социальных сетях:
                                </TextBlock>

                                <!--  Социальные сети  -->
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Margin="0,8,0,16"
                                    Orientation="Horizontal">
                                    <Button
                                        Click="OpenLink"
                                        Margin="4"
                                        Style="{StaticResource IconButtonStyle}"
                                        Tag="https://t.me/CoderW0rker"
                                        ToolTip="Telegram">
                                        <TextBlock FontSize="22" Text="📱" />
                                    </Button>
                                    <Button
                                        Click="OpenLink"
                                        Margin="4"
                                        Style="{StaticResource IconButtonStyle}"
                                        Tag="https://www.youtube.com/@w_ixon"
                                        ToolTip="YouTube">
                                        <TextBlock FontSize="22" Text="📺" />
                                    </Button>
                                    <Button
                                        Click="OpenLink"
                                        Margin="4"
                                        Style="{StaticResource IconButtonStyle}"
                                        Tag="https://github.com/W1xon"
                                        ToolTip="GitHub">
                                        <TextBlock FontSize="22" Text="💻" />
                                    </Button>
                                </StackPanel>

                                <!--  Кнопка поддержки  -->
                                <Button
                                    Click="OpenLink"
                                    Content="💖 Поддержать проект"
                                    FontSize="15"
                                    Height="48"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource BtnGreen}"
                                    Tag="https://dalink.to/w1xon"
                                    Width="220" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Border>
</Window>